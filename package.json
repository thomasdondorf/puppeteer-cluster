{
  "name": "puppeteer-cluster",
  "version": "0.7.2",
  "description": "Cluster management for puppeteer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "./node_modules/.bin/jest",
    "coverage": "./node_modules/.bin/jest --coverage",
    "dev": "./node_modules/.bin/tsc --watch",
    "lint": "./node_modules/.bin/tslint -c tslint.json --project tsconfig.json 'src/**/*.ts'"
  },
  "author": "Thomas Dondorf",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasdondorf/puppeteer-cluster.git"
  },
  "homepage": "https://github.com/thomasdondorf/puppeteer-cluster",
  "keywords": [
    "puppeteer",
    "cluster",
    "pool"
  ],
  "license": "GPL-3.0",
  "dependencies": {
    "@types/debug": "0.0.30",
    "debug": "^3.1.0"
  },
  "peerDependencies": {
    "puppeteer": "^1.5.0"
  },
  "devDependencies": {
    "puppeteer": "^1.5.0",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.3",
    "@types/puppeteer": "^1.3.4",
    "jest": "^23.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts}"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
